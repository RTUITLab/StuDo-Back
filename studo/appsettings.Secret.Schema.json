{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for appsettings.Secret.json file format",

  "type": "object",

  "properties": {
    "FillDbOptions": {
      "type": "object",
      "description": "Options for filling Db on application start",
      "properties": {
        "Firstname": {
          "type": "string"
        },
        "Surname": {
          "type": "string"
        },
        "Email": {
          "type": "string",
          "format": "email"
        },
        "Password": {
          "type": "string",
          "description": "Follow password example from startup.cs"
        }
      },
      "required": [ "Email", "Firstname", "Surname", "Password" ]
    },
    "JwtOptions": {
      "type": "object",
      "description": "Options for JWT normal work",
      "properties": {
        "SecretKey": {
          "type": "string"
        },
        "Audience": {
          "type": "string",
          "format": "uri"
        },
        "Issuer": {
          "type": "string"
        },
        "LifeTime": {
          "type": "string",
          "description": "USE FORMAT 00:00:00"
        }
      },
      "required": [ "Audience", "Issuer", "LifeTime", "SecretKey" ]
    },
    "LogsOptions": {
      "type": "object",
      "description": "Options for tracing logs",
      "properties": {
        "SecretKey": {
          "type": "string"
        }
      },
      "required": ["SecretKey"]
    }
  }
}
