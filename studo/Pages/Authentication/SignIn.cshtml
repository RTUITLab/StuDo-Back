@page
@model studo.Pages.Authentication.SignInModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="validation" asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="Login" class="control-label">Email</label>
        <input id="Login" type="email" asp-for="userLoginRequest.Email" class="form-control" />
        <span asp-validation-for="userLoginRequest.Email"></span>
    </div>
    <div class="form-group">
        <label for="Password" class="control-label">Password</label>
        <input id="Password" type="password" asp-for="userLoginRequest.Password" class="form-control" />
        <span asp-validation-for="userLoginRequest.Password"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign in" class="btn btn-success" />
    </div>
</form>
